  <style>
    /* Style général de la page */
    body {
      background-color: #f0f2f5;
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      margin: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      text-align: center;
    }

    /* Header et footer : alignement horizontal des images */
    header, footer {
      width: 100%;
      margin: 20px 0;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 30px;
    }

    /* Agrandir les images */
    header img, footer img {
      max-width: 200px; /* images agrandies */
      height: auto;
    }
    
    /* Appliquer des coins arrondis aux images 1 à 5 */
    #img1, #img2, #img3, #img4, #img5 {
      border-radius: 15px;
    }

    /* Animation pour l'effet d'éclairage */
    @keyframes lighting {
      0% { filter: brightness(1); }
      50% { filter: brightness(1.5); }
      100% { filter: brightness(1); }
    }

    /* Classe appliquée pour déclencher l'animation */
    .highlight {
      animation: lighting 1s ease-in-out;
    }

    /* Container pour centrer les boutons */
    .container {
      background: #ffffff;
      padding: 30px 40px;
      border-radius: 10px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
      text-align: center;
      margin-bottom: 20px;
    }

    /* Style des boutons */
    .btn {
      display: inline-block;
      width: 250px; /* taille uniforme pour tous les boutons */
      background: linear-gradient(145deg, #1abc9c, #16a085);
      color: #fff;
      padding: 15px 0;
      margin: 10px;
      font-size: 16px;
      border: none;
      border-radius: 10px; /* coins arrondis */
      cursor: pointer;
      transition: background 0.3s ease, transform 0.3s ease;
      text-decoration: none;
    }

    /* Effet au survol */
    .btn:hover {
      background: linear-gradient(145deg, #16a085, #1abc9c);
      transform: translateY(-3px);
    }

    /* Effet au clic */
    .btn:active {
      transform: translateY(0);
    }

    /* Adaptation pour les petits écrans */
    @media (max-width: 600px) {
      .btn {
        width: 200px;
        padding: 12px 0;
        font-size: 14px;
        margin: 8px;
      }
      header img, footer img {
        max-width: 150px;
      }
    }
  </style>
